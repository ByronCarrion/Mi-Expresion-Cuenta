.container-menu
    padding: .5em .8em
    & h1
        text-align: center
        color: colorBlue
    
.menu-item
    display: flex
    align-items: center
    justify-content: center
    margin: 2em 0
    @media screen and ( max-width 426px)
        display: grid
        margin: .5em

.container-item
    width: 15em
    height 20em
    border-radius: border__radius
    box-shadow: shadow 
    margin-right: 2em  
    padding: 2em
    transition: .5s
    @media screen and ( max-width 426px)
        margin-right: 0
        margin-bottom: 2em
        width: 13em

    &.determinante
        background: url('/images/determinantes.svg')
        //background-size: cover;
        background-repeat: no-repeat
        //background-origin: content-box;
        background-position: center;
    &.adjetivos
        background: url('/images/Adjetivos.svg')
        //background-size: cover;
        background-repeat: no-repeat
        //background-origin: content-box;
        background-position: center;
    &.preposiciones
        background: url('/images/Preposiciones.svg')
        //background-size: cover;
        background-repeat: no-repeat
        //background-origin: content-box;
        background-position: top;
    &.conectores
        background: url('/images/conectores.svg')
        //background-size: cover;
        background-repeat: no-repeat
        //background-origin: content-box;
        background-position: center;

    & h1
        margin 2em 0
    & .title-item
        font-size: 1.5em 
        font-weight: bold
        color:#3c3c3c

    & .subtitle-item
        font-size: 1em
        margin-top: 1em
        color #3c3c3c
    &:hover
        transform: scale(1.1)
    