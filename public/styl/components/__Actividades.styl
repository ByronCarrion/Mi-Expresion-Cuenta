.container-activity
    display: flex
    padding: 0 2em
    justify-content: center
    align-items: center
    & .activity
        padding: 2em
        @media screen and (max-width 425px)
                padding: .5em
    @media screen and (max-width 425px)
        display: block
                
        & h1
            margin-top: 0
            @media screen and (max-width 425px)
                font-size: 1.5em
.enunciado
    font-size: 1.5em
    color: colorBlue
    margin-bottom: 4em
    @media screen and (max-width 425px)
                font-size: 1em

.respuesta
    margin-bottom: 1em
    color:colorGrey
    font-size: 1em
    transition: .5s
    @media screen and (max-width 425px)
                padding: 1em
    &:hover
       
        background: colorBlue
        transform: scale(1.05)
        color:white
    &:focus
        background: colorBlue
        color:white

.container-respuestas
    margin-bottom: 1em
.container-validacion
    display: grid;
    grid-template-columns: repeat(3,1fr);
    grid-template-areas: 'comprobar . siguiente'
    column-gap: 5em;
    border-top: 1px solid color_GreyLight
    padding-top: 2em
    @media screen and (max-width 425px)
        grid-template-columns: repeat(1,1fr);
        grid-template-areas: 'comprobar''siguiente';
        row-gap: 1em

.comprobar
    grid-area: comprobar
    color:colorGrey

.siguiente
    grid-area: siguiente
